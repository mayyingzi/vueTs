{
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "allowJs": true,
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2015.promise"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "sourceMap": true
    }
}
